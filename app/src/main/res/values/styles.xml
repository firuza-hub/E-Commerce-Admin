<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="colors">
        <attr name="background_color" format="color" />
        <attr name="text_color" format="color" />
        <attr name="hint_text_color" format="color" />
        <attr name="card_background_color" format="color" />
        <attr name="card_border_color" format="color" />
        <attr name="input_icon_color" format="color" />
        <attr name="input_hint_icon_color" format="color" />
        <attr name="btn_inactive_color" format="color" />
        <attr name="btn_active_color" format="color" />
        <attr name="btn_text_color" format="color" />
    </declare-styleable>


    <style name="Header" >
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:fontFamily">@font/barlow_medium</item>
<!--  TODO: Xeyal baxacaq       <item name="android:fontWeight">700</item>-->
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InputText">
        <item name="fontFamily">@font/nunito</item>
        <item name="singleLine">true</item>
        <item name="android:textColorHint">?attr/hint_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
    </style>

    <style name="btnAuth">
        <item  name="android:padding">@dimen/dimen_7dp</item>
        <item  name="android:layout_height">@dimen/dimen_44dp</item>
        <item  name="android:layout_width">@dimen/dimen_44dp</item>
    </style>
    <style name="btnLong">
        <item name="android:textSize">@dimen/dimean_16sp</item>
        <item name="android:textAllCaps">false</item>
        <!--  TODO: Xeyal baxacaq       <item name="android:fontWeight">600</item>-->
        <item name="backgroundTint">?attr/btn_active_color</item>
        <item name="android:textColor">?attr/btn_text_color</item>
        <item name="cornerRadius">@dimen/button_corner_radius_28</item>
    </style>
    <style name="InputCard">
        <item name="elevation">0dp</item>
        <item  name="android:layout_height">@dimen/input_card_height</item>
        <item name="strokeColor">?attr/card_border_color</item>
        <item name="strokeWidth">@dimen/card_border_width</item>
        <item name="cardBackgroundColor">?attr/card_background_color</item>
        <item name="cardCornerRadius">@dimen/corner_radius_input_card</item>
    </style>


</resources>
